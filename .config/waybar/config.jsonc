{
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    //"gtk-layer-shell": "false",
    "height": 42, // Waybar height (to be removed for auto height)
    "width": 2560, // Waybar width
    "spacing": 0, // Gaps between modules (0px) Adjusted in the css
    "margin-top": 0,
    //"margin-bottom":-10,
    "margin-left": 10,
    "margin-right": 10,
    // Choose the order of the modules
    "modules-left": [
        "cpu",
        "custom/gpu",
        "memory",
        "disk#1",
        "disk#2",
        "upower",
        "temperature",
        "network"
    ],
    "modules-center": [
        "hyprland/workspaces",
        "hyprland/window"
    ],
    "modules-right": [
        "pulseaudio",
        "tray",
        "clock",
        "hyprland/language"
    ],
    "upower": {
        "icon-size": 18,
        "hide-if-empty": true,
        "tooltip": false,
        "tooltip-spacing": 20,
        "tooltip-padding": 8
    },
    "cpu": {
        "interval": 1,
        "format": " {load}",
        "on-click-right": "kitty --class wm-floating --title all_is_kitty --hold --detach sh -c 'btop'",
        "on-click-left": "kitty --class wm-floating --title all_is_kitty --hold --detach sh -c 'btop'"
    },
    "custom/gpu": {
        "interval": 1,
        "exec": "nvidia-smi --query-gpu=utilization.gpu --format=csv,noheader,nounits",
        "format": " {}%",
        "return-type": "",
        "on-click-right": "kitty --class wm-floating --title all_is_kitty --hold --detach sh -c 'nvidia-smi'"
    },
    "memory": {
        "interval": 2,
        "format": " {used}GB",
        // "format-alt": "󰾆 {percentage}%",
        "max-length": 30,
        "tooltip": true,
        "tooltip-format": " {used:0.1f}GB/{total:0.1f}GB"
    },
    "temperature": {
        "interval": 2,
        "format": "{temperatureC}°C ",
        "format-icons": [
            "",
            "",
            "",
            "",
            ""
        ]
    },
    "disk#2": {
        // "format": " {percentage_used}% ({free})",
        // "format": "💿 {free}",
        "path": "/home",
        "format": " {free}",
        "format-alt": " {percentage_used}% ({free})",
        "tooltip": true,
        "on-click-left": "kitty --title all_is_kitty sh -c 'ncdu'",
        "on-click-right": "kitty --title all_is_kitty sh -c 'btop'",
        "interval": 10
    },
    "disk#1": {
        // "format": " {percentage_used}% ({free})",
        // "format": "💿 {free}",
        "path": "/",
        "format": "/ {free}",
        "format-alt": " {percentage_used}% ({free})",
        "tooltip": true,
        "on-click-left": "kitty --title all_is_kitty sh -c 'ncdu'",
        "on-click-right": "kitty --title all_is_kitty sh -c 'btop'",
        "interval": 10
    },
    "network": {
        // "format": "↕️{bandwidthTotalBytes}",
        "format": "󰹹{bandwidthTotalBytes}",
        "format-disconnected": "No Internet⚡",
        "format-linked": "{ifname} (No IP) ‼️",
        // "format-alt": "⬆️ {bandwidthUpBytes} | ⬇️ {bandwidthDownBytes}",
        "format-alt": " {bandwidthUpBytes} |  {bandwidthDownBytes}",
        // "format-wifi": "{essid}({signalStrength}%) 🛜",
        "format-wifi": "{essid}({signalStrength}%)  ",
        "format-ethernet": "🌐 {ipaddr}/{cidr} ",
        // "tooltip-format-wifi": "🛜 {essid}({signalStrength}%)",
        "tooltip-format-wifi": "  {essid}({signalStrength}%)",
        "tooltip-format-ethernet": "🌐 {ipaddr}/{cidr}",
        // "tooltip-format-disconnected": "‼️ Disconnected",
        "tooltip-format-disconnected": " ",
        "on-click-left": "nm-connection-editor",
        "interval": 2
    },
    "hyprland/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "1": "personal - ",
            "2": "work  ",
            "3": "terminal  ",
            "4": "stream  ",
            "5": "entertainment  ",
            "6": "coms  ",
            "7": "obs  ",
            "urgent": "urgent! ",
            "default": "- ",
            "sort-by-number": true
        }
    },
    "hyprland/window": {
        "format": "{}",
        "separate-outputs": true,
        "max-length": 36
    },
    "pulseaudio": {
        "format": "{icon} {volume}",
        "format-bluetooth": "{icon}  {volume}%",
        "format-bluetooth-muted": "󰝟 {icon}",
        "format-muted": " {volume}",
        "tooltip-format": "{icon} {desc} // {volume}%",
        "scroll-step": 5,
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": [
                "",
                "",
                ""
            ]
        },
        "on-click": "pavucontrol",
        "on-click-right": "kitty --class wm-floating --title all_is_kitty --hold --detach sh -c 'bluetoothctl'"
    },
    "tray": {
        "icon-size": 15,
        "spacing": 15
    },
    "clock": {
        "format": " {:%H:%M  %d %b %Y}",
        "format-alt": " {:%I:%M %p  %a %d}",
        //"format": "{:%R  📅 %d/%m}",
        //"format-alt": "{:%A, %B %d, %Y (%R)} 🗓️ ",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
            "mode": "year",
            "mode-mon-col": 3,
            "weeks-pos": "right",
            "on-scroll": 1,
            "on-click-right": "mode",
            "format": {
                "months": "<span color='#ffead3'><b>{}</b></span>",
                "days": "<span color='#ecc6d9'><b>{}</b></span>",
                "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
                "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
                "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
            }
        },
        "actions": {
            "on-click-right": "mode",
            "on-click-forward": "tz_up",
            "on-click-backward": "tz_down",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },
    "hyprland/language": {
        "format": " {}",
        "format-en": "en",
        "format-de": "de",
        "format-ar": "ar",
        "format-fr": "fr",
        "format-tr": "tr"
    }
}
